<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp" android:gravity="center_horizontal">

    <LinearLayout android:id="@+id/wheel"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:paddingBottom="30dp"
                  android:layout_alignWithParentIfMissing="false"
                  android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                  android:gravity="center|center_horizontal">

        <NumberPicker android:id="@+id/numberP1"
                      android:layout_height="wrap_content"
                      android:layout_width="50dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="."
                android:id="@+id/textView" android:layout_gravity="center" android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold" android:textSize="20dp"/>
        <NumberPicker android:id="@+id/numberP2"
                                       android:layout_height="wrap_content"
                                       android:layout_width="50dp"/>
    </LinearLayout>

    <Button android:id="@+id/setButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set" android:layout_centerHorizontal="true" android:layout_below="@+id/wheel"/>

</RelativeLayout>